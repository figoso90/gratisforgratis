@model GratisForGratis.Models.UtenteRegistrazioneViewModel
@using System.Configuration
@{
    ViewBag.Title = Resources.Language.TitleRegister;
}

<section id="head">
    <div class="content">
        <h1 id="title">@ViewBag.Title</h1>
    </div>
</section>
<section id="loginForm">
    @using (Html.BeginForm("Registrazione", "Utente", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <h2 id="description">@Html.Raw(string.Format(Language.DescriptionRegister,
                            ConfigurationManager.AppSettings["bonusIscrizione"] + " " + Language.Moneta,
                            ConfigurationManager.AppSettings["bonusPubblicazioniIniziali"] + " " + Language.Moneta,
                            ConfigurationManager.AppSettings["numeroPubblicazioniBonus"]))</h2>
        <hr />
        <p>@Html.ActionLink(ViewModel.RegisterLinkSpeed, "Login", "Utente", null, new { style = "color: #fff;background-color: green;padding: 7px;border:2px solid yellow;border-radius: 6px;text-transform: uppercase;text-decoration: underline;" })</p>
        @Html.ValidationMessage("Errore", new { @class = "text-danger" })
        if (TempData["salvato"] != null && (bool)TempData["salvato"])
        {
            <h4 class="message">@Language.RegistrazioneOK</h4>
        }
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label required" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Email, new { type = "email", @class = "form-control fieldtrim" })
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label required" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfermaPassword, new { @class = "col-md-2 control-label required" })
                <div class="col-md-10">
                    @Html.PasswordFor(m => m.ConfermaPassword, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.ConfermaPassword, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Nome, new { @class = "col-md-2 control-label required" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Nome, new { @class = "form-control fieldtrim" })
                </div>
                @Html.ValidationMessageFor(m => m.Nome, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Cognome, new { @class = "col-md-2 control-label required" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Cognome, new { @class = "form-control fieldtrim" })
                </div>
                @Html.ValidationMessageFor(m => m.Cognome, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Telefono, new { @class = "col-md-2 control-label" })
                <div class="col-md-10">
                    @Html.TextBoxFor(m => m.Telefono, new { @class = "form-control fieldtrim" })
                </div>
                @Html.ValidationMessageFor(m => m.Telefono, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Citta, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.Citta, new { @class = "form-control fieldtrim", data_autocomplete_url = "/Home/FindCitta", data_autocomplete_id = "IDCitta" })
                    @Html.HiddenFor(m => m.IDCitta)
                </div>
                @Html.ValidationMessageFor(m => m.Citta, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Indirizzo, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.Indirizzo, new { @class = "form-control fieldtrim" })
                </div>
                @Html.ValidationMessageFor(m => m.Indirizzo, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Civico, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.Civico, new { @class = "form-control fieldtrim" })
                </div>
                @Html.ValidationMessageFor(m => m.Civico, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CittaSpedizione, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.CittaSpedizione, new { @class = "form-control fieldtrim", data_autocomplete_url = "/Home/FindCitta", data_autocomplete_id = "IDCittaSpedizione" })
                    @Html.HiddenFor(m => m.IDCittaSpedizione)
                </div>
                @Html.ValidationMessageFor(m => m.CittaSpedizione, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.IndirizzoSpedizione, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.IndirizzoSpedizione, new { @class = "form-control fieldtrim" })
                </div>
                @Html.ValidationMessageFor(m => m.IndirizzoSpedizione, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.CivicoSpedizione, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.CivicoSpedizione, new { @class = "form-control fieldtrim" })
                </div>
                @Html.ValidationMessageFor(m => m.CivicoSpedizione, "", new { @class = "text-danger" })
            </div>
        <div class="footer">
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <div class="checkbox">
                        @Html.CheckBoxFor(m => m.AccettaCondizioni)
                        <label id="LblAccettaCondizioni" for="AccettaCondizioni">@Html.Raw(Language.AcceptConditions)</label>
                        @Html.ValidationMessageFor(m => m.AccettaCondizioni, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
            <input type="submit" class="btn btn-success" value="@Resources.Language.Register" /> 
        </div>
        <div class="row">
            <div class="form-group loginFacebook">
                <a class="btn btn-primary" href="@Url.Action("LoginFacebook", "Utente", new { ReturnUrl = (Model == null || string.IsNullOrWhiteSpace(Model.ReturnUrl) ? "" : Model.ReturnUrl) })">
                    <img src="https://facebookbrand.com/wp-content/uploads/2016/05/flogo_rgb_hex-brc-site-250.png?w=16&h=16" style="margin-right: 10px;" />
                    @ViewModel.LoginFacebook
                </a>
            </div>
        </div>
        <div>
            <p class="info">
                @Html.Raw(ViewModel.RegisterInfo)
            </p>
        </div>
    }
</section>

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
