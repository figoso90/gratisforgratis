@model GratisForGratis.Models.UtentePasswordDimenticataViewModel

@{
    ViewBag.Title = @Language.TitleForgotPassword;
}

@section Styles{ 
    @Styles.Render("~/Content/passwordDimenticata.css")
}

<section id="head">
    <div class="content">
        <h1 id="title">@ViewBag.Title</h1>
    </div>
</section>
<section id="passwordForm" class="content">
    @using (Html.BeginForm("PasswordDimenticata", "Utente", "", FormMethod.Post, new { @class = "form-horizontal container", role = "form" }))
    {
        <div class="form-row">
            <div class="form-group col-md">
                @Html.AntiForgeryToken()
                <h2 id="description">@Language.DescriptionPassword</h2>
                <hr />
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @if (TempData["salvato"] != null && (bool)TempData["salvato"])
                {
                <h4 class="message">@Language.SendPasswordOk</h4>
                }
            </div>
        </div>
        <div class="form-row justify-content-center align-items-center">
            <div class="form-group col-md-5">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-row footer">
            <div class="form-group col-md-12">
                <input type="submit" value="Recupera Password" class="btn btn-success" />
            </div>
            <div class="form-group col-md-12">
                <p>
                    @Html.ActionLink("Esegui registrazione come nuovo utente", "Registrazione")
                </p>
            </div>
        </div>
    }
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

