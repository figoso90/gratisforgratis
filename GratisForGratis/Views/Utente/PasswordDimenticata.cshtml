@model GratisForGratis.Models.UtentePasswordDimenticataViewModel

@{
    ViewBag.Title = @Language.TitleForgotPassword;
}

@section Styles{ 
    @Styles.Render("~/Content/passwordDimenticata.css")
}

<section id="head">
    <div class="content">
        <h1 id="title">@ViewBag.Title</h1>
    </div>
</section>
<section id="passwordForm">
    <div class="content">
        @using (Html.BeginForm("PasswordDimenticata", "Utente", "", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
            @Html.AntiForgeryToken()
            <h2 id="description">@Language.DescriptionPassword</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            if (TempData["salvato"] != null && (bool)TempData["salvato"])
            {
                <h4 class="message">@Language.SendPasswordOk</h4>
            }
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
            </div>
            <div class="footer">
                <input type="submit" value="Recupera Password" class="btn" />
            </div>
            <p>
                @Html.ActionLink("Esegui registrazione come nuovo utente", "Registrazione")
            </p>
        }
    </div>
</section>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

