@Styles.Render("~/Content/seo.css")
@Styles.Render("~/Content/partners.css")

<section id="head">
    <div class="content">
        <h1 id="title">@ViewBag.Title</h1>
    </div>
</section>

<section id="pagina" class="content">
    <div class="container">
        <div class="row">
            <div id="presentazione" class="col-md-8 mr-5">
                <h2 class="title">PARTNERSHIP / CIRCUITO WEB</h2>

                <a class="box col-md-3" href="http://avvocatoclick.davidemilitano.net" target="_blank" title="Avvocato Click">
                    <div>
                        <img class="img-fluid img-thumbnail" src="http://avvocatoclick.davidemilitano.net/images/logo_AvvocatoClick.png" alt="Logo AvvocatoClick" />
                        <h4>
                            Avvocato Click
                        </h4>
                        <h4>
                            Servizi
                        </h4>
                    </div>
                </a>
                <a class="box col-md-3" href="http://freebanner.davidemilitano.net" target="_blank" title="Freebanner">
                    <div>
                        <img class="img-fluid img-thumbnail" src="http://freebanner.davidemilitano.net/images/logo.png" alt="Logo FreeBanner" />
                        <h4>
                            FreeBanner
                        </h4>
                        <h4>
                            Servizi
                        </h4>
                    </div>
                </a>
            </div>
            <aside id="linkRapidi" class="col-md-3">
                <h2 class="title">Link rapidi</h2>
                <ul class="lista">
                    <li>
                        @Html.ActionLink(ViewModel.MissionLink, "Missione", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(ViewModel.HowWorkLink, "ComeFunziona", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(ViewModel.CircularEconomy, "EconomiaCircolare", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(ViewModel.HappyDegrowth, "DecrescitaFelice", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(ViewModel.HappyPeople, "HappyPeople", "Home")
                    </li>
                </ul>
                <a class="helper" href="@Url.Action("", "cerca")" title="@ViewBag.Title">
                    <img src="~/Images/stickers/tartaruga3.png" alt="@Language.Search" />
                </a>
            </aside>
        </div>
    </div>
</section>