@Styles.Render("~/Content/seo.css")

<section id="head">
    <div class="content">
        <h1 id="title">@ViewBag.Title</h1>
    </div>
</section>

<section id="pagina" class="content">
    <div class="container">
        <div class="row">
            <div id="presentazione" class="col-md-8 mr-5">
                <h2>Definizione</h2>
                <p>
                    L'Happy-Coin è una moneta che basa la sua generazione in base alla felicità delle persone.
                    Più azioni vengono eseguite, soprattutto azioni positive per altre persone, più verrà generato credito
                    spendibile all'interno e all'esterno della piattaforma.
                    I crediti possono essere usati per beni o servizi di qualsiasi tipo.
                </p>
                <h2>Storia</h2>
                <p>
                    L'happycoin è nato dall'idea di due ragazzi che avevano il desiderio di scambiare in un sistema
                    economico alternativo con regole diverse da quelle dell'economia reale.
                </p>
                <h2>Link alla ricerca per happy</h2>
                <p>

                </p>
            </div>
            <aside id="linkRapidi" class="col-md-3">
                <h2 class="title">Link rapidi</h2>
                <ul class="lista">
                    <li>
                        @Html.ActionLink(ViewModel.TeamLink, "Team", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(ViewModel.FundingLink, "Finanziamenti", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(ViewModel.FreeCircuitLink, "CircuitoGratis", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(ViewModel.PartnershipLink, "Partnership", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(ViewModel.SellGratisLink, "VenditaGratis", "Home")
                    </li>
                </ul>
                <a class="helper" href="@Url.Action("", "cerca")" title="@ViewBag.Title">
                    <img src="~/Images/stickers/tartaruga3.png" alt="@Language.Search" />
                </a>
            </aside>
        </div>
    </div>
</section>

