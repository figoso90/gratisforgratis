@Styles.Render("~/Content/seo.css")

<section id="head">
    <div class="content">
        <h1 id="title">@ViewBag.Title</h1>
    </div>
</section>

<section id="pagina" class="content">
    <div class="container">
        <div class="row">
            <div id="presentazione" class="col-md-8 mr-5">
                <h2 class="title">CONDIVISIONE</h2>
                <div class="row">
                    <div class="col-md-4">
                        <h3>@Html.ActionLink(ViewModel.HomeUserJoinSocial, "Impostazioni", "Utente", null, new { @class = "link" })</h3>
                        <img class="img-thumbnail img-circle" src="~/Images/stickers/25.png" alt="@ViewModel.HomeUserJoinSocial" />
                        <p>(@ViewModel.HomeUserJoinSocialInfo)</p>
                    </div>
                    <div class="col-md-4">
                        <h3>@Html.ActionLink(ViewModel.HomeUserPublishGood, "", "Pubblica", null, new { @class = "link" })</h3>
                        <img class="img-thumbnail img-circle" src="~/Images/stickers/3.png" alt="@ViewModel.HomeUserPublishGood" />
                        <p>(@ViewModel.HomeUserPublishGoodInfo)</p>
                    </div>
                    <div class="col-md-4">
                        <h3>@Html.ActionLink(ViewModel.HomeUserPublishService, "", "Pubblica", null, new { @class = "link" })</h3>
                        <img class="img-thumbnail img-circle" src="~/Images/stickers/10.png" alt="@ViewModel.HomeUserPublishService" />
                        <p>(@ViewModel.HomeUserPublishServiceInfo)</p>
                    </div>
                </div>
                <h2 class="title">PARTECIPAZIONE / ALTRUISMO</h2>
                <div class="row">
                    <div class="col-md-4">
                        <h3><a href="javascript:void(0);" onclick="$('#reporting').click();">@ViewModel.HomeUserSendBug</a></h3>
                        <img class="img-thumbnail img-circle" src="~/Images/stickers/28.png" alt="@ViewModel.HomeUserSendBug" />
                        <p>(@ViewModel.HomeUserSendBugInfo)</p>
                    </div>
                    <div class="col-md-4">
                        <h3>@Html.ActionLink(ViewModel.HomeUserFullAd, "", "Pubblica", null, new { @class = "link" })</h3>
                        <img class="img-thumbnail img-circle" src="~/Images/stickers/29.png" alt="@ViewModel.HomeUserFullAd" />
                        <p>(@ViewModel.HomeUserFullAdInfo)</p>
                    </div>
                    <div class="col-md-4">
                        <h3>@Html.ActionLink(ViewModel.HomeUserFeedback, "Concluse", "Vendite", null, new { @class = "link" })</h3>
                        <img class="img-thumbnail img-circle" src="~/Images/stickers/21.png" alt="@ViewModel.HomeUserFeedback" />
                        <p>(@ViewModel.HomeUserFeedbackInfo)</p>
                    </div>
                </div>
            </div>
            <aside id="linkRapidi" class="col-md-3">
                <h2 class="title">Link rapidi</h2>
                <ul class="lista">
                    <li>
                        @Html.ActionLink(ViewModel.OnlineMoneyLink, "Criptovaluta", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(ViewModel.FundingLink, "Finanziamenti", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(ViewModel.FreeCircuitLink, "CircuitoGratis", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(ViewModel.HappyPeople, "HappyPeople", "Home")
                    </li>
                    <li>
                        @Html.ActionLink(ViewModel.BitCoin, "Bitcoin", "Home")
                    </li>
                </ul>
                <a class="helper" href="@Url.Action("", "cerca")" title="@ViewBag.Title">
                    <img src="~/Images/stickers/scimmia3.png" alt="@Language.Search" />
                </a>
            </aside>
        </div>
    </div>
</section>

