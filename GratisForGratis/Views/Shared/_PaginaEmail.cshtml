@using System.Web.Configuration
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="author" content="Gratis Onlus" />
    @RenderSection("MetaTags", false)
    <title>@((@ViewBag.Title != null)? ViewBag.Title:MetaTag.TitleGeneric) - @WebConfigurationManager.AppSettings["nomeSito"]</title>
</head>
<body style="text-align:center;">
    <table id="window" cellspacing="0" cellpadding="0" border="0" align="center" style="font-size:13px;font-family:Arial;color:black;width:100%;background-color:#d9e5e8;">
        <tr><td style="height:10px;">&nbsp;</td></tr>
        <tr>
            <td align="center">
                <table cellspacing="0" align="center" cellpadding="0" border="0" style="font-size:13px;font-family:Arial;color:black;text-align:left;width:98%;height:572px;border:3px solid #178fcc;background-color:#ffffff;background-repeat:no-repeat;background-position:center top;">
                    <tr>
                        <td colspan="3" align="center" style="padding:16px 0px 0px;">
                            <a href="@Url.Action("Index", "Home", null, null, Request.Url.Host)"><img src="@Url.Content(Request.Url.GetLeftPart(UriPartial.Authority) + "/Images/logo.jpg")" alt="@WebConfigurationManager.AppSettings["nomeSito"]" height="100" /></a>
                        </td>
                    </tr>
                    @RenderBody()
                </table>
            </td>
        </tr>
        <tr><td style="height:5px;">&nbsp;</td></tr>
        <tr>
            <td align="center">
                <table cellspacing="0" cellpadding="0" border="0" align="center" style="width:80%;">
                    <tr>
                        <td align="center" style="font-size:11px;text-align:center;">
                            @Html.Raw(string.Format(Email.Footer, Html.ActionLink(Url.Action("Index", "Home", null, null, Request.Url.Host), "Index", "Home", null, Request.Url.Host, null, null, new { style = "color:#189CBB;" }), WebConfigurationManager.AppSettings["nomeSito"]))
                            @DateTime.Now.Year @WebConfigurationManager.AppSettings["nomeSito"]<br /><br />
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
        <tr><td style="height:10px;">&nbsp;</td></tr>
    </table>
</body>
</html>
