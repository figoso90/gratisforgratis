@model GratisForGratis.Models.PersonaModel

<div id="carousel-example-generic" class="carousel slide" data-ride="carousel">
    @if (Model.Foto.Count > 0)
    {
        <!-- Indicators -->
        <ol class="carousel-indicators">
            @for (int i = 0; i < Model.Foto.Count; i++)
            {
                <li data-target="#carousel-example-generic" data-slide-to="@i" class="@(i == 0 ? "active" : "")"></li>
            }
        </ol>

        <!-- Wrapper for slides -->
        <div id="listaUpload" class="carousel-inner" role="listbox">
            @for (int i = 0; i < Model.Foto.Count; i++)
            {
                <div class="carousel-item @(i == 0 ? "active" : "")">
                    <img src="@("/Uploads/Images/" + Model.Persona.TOKEN + "/" + Model.Foto[i].DATA_INSERIMENTO.Year + "/Normal/" + Model.Foto[i].NOME)" alt="@(Model.Foto[i].NOME)">
                    <a class="glyphicon glyphicon-remove-sign" onclick="deleteImmagineProfilo(encodeURI('@(Model.Foto[i].ID)'), this);"></a>
                </div>
            }
        </div>

        <!-- Controls -->
        <a class="left carousel-control" href="#carousel-example-generic" role="button" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#carousel-example-generic" role="button" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    }
    else
    {
        <!--<div>NESSUNA FOTO CARICATA...</div>-->
        <div>
            <img src="~/Images/icone/profile.svg" alt="Profilo" style="max-height:250px;">
        </div>
    }
</div>
