@model GratisForGratis.Models.PagamentoViewModel

@{
    ViewBag.Title = "Test " + Resources.Language.TitlePayment + "-" + System.Configuration.ConfigurationManager.AppSettings["nomeSito"];
}

@section Styles {
    @Styles.Render("~/Content/testPayment.css")
}

<section id="head">
    <div class="content">
        <h1 id="title">Test @Resources.Language.TitlePayment</h1>
    </div>
</section>
<section id="payment">
    <div class="content">
        @using (Html.BeginForm("Payment", "Pagamento", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form", id = "test" }))
            {
            <div class="form-group">
                @Html.LabelFor(m => m.EmailReceivent, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.HiddenFor(m => m.Token, new { @class = "form-control", Value = "98E3DA5D-9ECF-4E45-9187-5EDFBDFB3091" })
                    @Html.TextBoxFor(m => m.EmailReceivent, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.EmailReceivent, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.DescriptionPayment, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.DescriptionPayment, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.DescriptionPayment, "", new { @class = "text-danger" })
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.TotalPrice, new { @class = "col-md-2 control-label" })
                <div class="col-md">
                    @Html.TextBoxFor(m => m.TotalPrice, new { @class = "form-control" })
                </div>
                @Html.ValidationMessageFor(m => m.TotalPrice, "", new { @class = "text-danger" })
            </div>
            <div class="footer">
                <input type="submit" value="Paga con GratisForGratis" class="btn btn-default" style="width:auto;" />
            </div>
        }
    </div>
</section>
