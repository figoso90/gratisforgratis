<section id="purchases">
    <div id="grid" class="container-fluid">
        @foreach (AnnuncioViewModel annuncio in Model)
        {
            @Html.Partial("PartialPages/_Annuncio", annuncio)
        }
    </div>
    @Html.Partial("PartialPages/_ElencoPagine", new ElencoPagine((int)ViewData["TotalePagine"],
            (int)ViewData["Pagina"], (((int)ViewData["Pagina"] - 5) < 1 ? 1 : (int)ViewData["Pagina"] - 5), "Acquisti", "Conclusi"))
</section>


@section Scripts {
    @Scripts.Render("~/Scripts/listaAcquisti.js")
}
