@model GratisForGratis.Models.RicercaVideogamesViewModel

@Html.Partial("PartialPages/_FiltroOggetto", Model)

<div class="form-group col-md-2 piattaforma">
    @Html.LabelFor(m => m.cerca_piattaforma, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.cerca_piattaforma, new { @class = "form-control", data_autocomplete_url = "/Home/FindPiattaforma", data_autocomplete_id = "cerca_piattaformaID", placeholder = Language.Platform })
    @Html.HiddenFor(m => m.cerca_piattaformaID)
    @Html.ValidationMessageFor(m => m.cerca_piattaformaID, "", new { @class = "text-danger" })
</div>
<div class="form-group slider genere">
    @Html.LabelFor(m => m.cerca_genere, new { @class = "control-label" })
    @Html.TextBoxFor(m => m.cerca_genere, new { @class = "form-control", data_autocomplete_url = "/Home/FindGenere", data_autocomplete_id = "cerca_genereID", placeholder = Language.Kind })
    @Html.HiddenFor(m => m.cerca_genereID)
    @Html.ValidationMessageFor(m => m.cerca_genereID, "", new { @class = "text-danger" })
</div>
<div class="row justify-content-center align-items-center">
    <a class="btn btn-primary" href="javascript:void(0);" onclick="ricercaAvanzata('FiltroVideogames');">@Language.Filter</a>
</div>