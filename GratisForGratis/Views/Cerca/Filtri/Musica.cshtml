@model GratisForGratis.Models.RicercaMusicaViewModel

@Html.Partial("PartialPages/_FiltroOggetto", Model)

<div class="form-group slider formato">
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.cerca_formato, new { @class = "form-control", data_autocomplete_url = "/Home/FindFormato", data_autocomplete_id = "cerca_formatoID", placeholder = Language.Format })
        @Html.HiddenFor(m => m.cerca_formatoID)
    </div>
    @Html.ValidationMessageFor(m => m.cerca_formatoID, "", new { @class = "text-danger" })
</div>
<div class="form-group slider artista">
    <div class="col-md-10">
        @Html.TextBoxFor(m => m.cerca_artista, new { @class = "form-control", data_autocomplete_url = "/Home/FindArtista", data_autocomplete_id = "cerca_artistaID", placeholder = Language.Artist })
        @Html.HiddenFor(m => m.cerca_artistaID)
    </div>
    @Html.ValidationMessageFor(m => m.cerca_artistaID, "", new { @class = "text-danger" })
</div>
<div class="row justify-content-center align-items-center">
    <a class="btn btn-primary" href="javascript:void(0);" onclick="ricercaAvanzata('FiltroMusica');">@Language.Filter</a>
</div>