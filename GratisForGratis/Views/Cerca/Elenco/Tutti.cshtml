@using GratisForGratis.Models
@model ListaVendite

<div class="linkPubblicaCategoria">
    @Html.ActionLink(Language.LnkGoToPublic, "", "Pubblica")
</div>
@Html.Partial("PartialPages/_Adv")
@foreach (AnnuncioViewModel vendita in Model.List)
{
    if (vendita.TipoAcquisto == TipoAcquisto.Oggetto)
    {
        @Html.Partial("PartialPages/_Oggetto", vendita)
    }
    else
    {
        @Html.Partial("PartialPages/_Servizio", vendita)
    }
}
@Html.Partial("PartialPages/_ElencoPagineRicerca", new ElencoPagineRicerca(Model.PageCount,
    Model.PageNumber, ((Model.PageNumber - 5) < 1 ? 1 : Model.PageNumber - 5),
    "categoria",
    "",
    Response.Cookies["ricerca"]["IDCategoria"]))
