@model GratisForGratis.Models.ListaVendite

@section Styles {
    @Styles.Render("~/Content/home.css")
    @Styles.Render("~/Content/ricerca.css")
}
<aside id="ricerca">
    @{ 
        var modello = new GratisForGratis.Models.RicercaViewModel(Model.TotalNumber);
        modello.NomeFiltro = "Tutti"; 
    } 
    @Html.Partial("PartialPages/_Filtro", modello)
</aside>
<section id="page">
    <section id="home" class="content">
        @Html.Partial("Elenco/Tutti", Model)
    </section>
</section>

@section Scripts {
    @Scripts.Render("~/Scripts/ricerca.js")
}