@model List<GratisForGratis.Models.UtenteNotificaViewModel>

    <div id="carouselNotificheHome" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            @foreach (var item in Model)
            {
                <div class="card text-center">
                    <div class="card-header">
                        Notifica importante
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">@item.Titolo</h5>
                        <p class="card-text">@item.Messaggio</p>
                        <a href="#" class="btn btn-primary">LETTO</a>
                    </div>
                    <div class="card-footer text-muted">
                        @item.DataInserimento.ToString("dd-MM-yyyy")
                    </div>
                </div>
            }
        </div>
        <a class="carousel-control-prev" href="#carouselNotificheHome" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselNotificheHome" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>